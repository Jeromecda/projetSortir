{% extends 'layouts/base.html.twig' %}

{% block title %}Lieu{% endblock %}

{% block body %}
    <h1>Lieu</h1>

    <table class="table">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ lieu.id }}</td>
            </tr> #}
            <tr>
                <th>Nom</th>
                <td>{{ lieu.nom }}</td>
            </tr>
            <tr>
                <th>Rue</th>
                <td>{{ lieu.rue }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ lieu.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ lieu.longitude }}</td>
            </tr>
        </tbody>
    </table>
    <div class="grid-x">
        <div class="cell medium-2 large-1">
            <a class="btn button primary" href="{{ path('app_lieu_index') }}">Retour</a>
        </div>
        <div class="cell medium-2 large-1">
            <a class="btn button warning" href="{{ path('app_lieu_edit', {'id': lieu.id}) }}">Modifier</a>
        </div>
        <div class="cell medium-2 large-2">
            {{ include('lieu/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
