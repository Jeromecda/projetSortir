{% extends 'layouts/base.html.twig' %}

{% block title %}Site index{% endblock %}

{% block body %}
    <h1>Site index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for site in sites %}
            <tr>
                <td>{{ site.id }}</td>
                <td>{{ site.nom }}</td>
                <td>
                    <a class="btn button primary" href="{{ path('app_site_show', {'id': site.id}) }}"><i class="fa-solid fa-eye"></i></a>
                    <a class="btn button warning" href="{{ path('app_site_edit', {'id': site.id}) }}"><i class="fa-solid fa-pen"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn button secondary" href="{{ path('app_site_new') }}">Create new</a>
{% endblock %}
