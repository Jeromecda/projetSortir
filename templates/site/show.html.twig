{% extends 'layouts/base.html.twig' %}

{% block title %}Site{% endblock %}

{% block body %}
    <h1>Site</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ site.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ site.nom }}</td>
            </tr>
        </tbody>
    </table>
    <div class="grid-x">
        <div class="cell large-1">
            <a class="btn button warning" href="{{ path('app_site_index') }}">Retour</a>
        </div>
        <div class="cell large-1">
            <a class="btn button primary" href="{{ path('app_site_edit', {'id': site.id}) }}">Modifier</a>
        </div>
        <div class="cell large-1">
            {{ include('site/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
