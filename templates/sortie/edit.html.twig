{% extends 'layouts/base.html.twig' %}

{% block title %}Modifier sortie{% endblock %}

{% block body %}
    <h1>Modifier les détails d'une sortie</h1>
	{{ form_start(form) }}

    {# {{ include('sortie/_form.html.twig', {'button_label': 'Update'}) }} #}

    <div class="grid-container">
		<div class="grid-x grid-padding-x">
			<div class="medium-6 large-6 cell">
				<label>Nom
					{{ form_widget(form.nom) }}
				</label>
			</div>
			<div class="medium-6 large-6 cell">
				<label>Site ENI organisateur
					{{ form_widget(form.siteOrganisateur) }}
				</label>
			</div>
		</div>

		<div class="grid-x grid-padding-x">
			<div class="medium-3 large-3 cell">
				<label>Date de début
					{{ form_widget(form.datedebut) }}
				</label>
			</div>
			<div class="medium-3 large-3 cell">
				<label>Date de clôture
					{{ form_widget(form.datecloture) }}
				</label>
			</div>
			<div class="medium-6 large-6 cell">
				<label>Ville
					<div id="select_ville">
                        {{ form_widget(form.ville, {'placeholder' : sortie.lieuNolieu.villeNoville.nom }) }}
                    </div>
				</label>
			</div>
		</div>

		<div class="grid-x grid-padding-x">
			<div class="medium-3 large-3 cell">
				<label>Nombre d'inscriptions maximum
					{{ form_widget(form.nbinscriptionsmax) }}
				</label>
			</div>
			<div class="medium-3 large-3 cell">
				<label>Durée (minutes)
					{{ form_widget(form.duree) }}
				</label>
			</div>
			<div class="medium-6 large-6 cell">
				<label class="group-label">Lieu de l'événement
					<div class="input-group">
						{{ form_widget(form.lieuNolieu, {'placeholder' : sortie.lieuNolieu.nom }) }}
						<a class="btn button success group-button" href="{{ path('app_lieu_new') }}">
							+
						</a>
					</div>
				</label>
			</div>
		</div>

		<div class="grid-x grid-padding-x">
			<div class="medium-6 large-6 cell">
				<label>Description de la sortie
					{{ form_widget(form.descriptioninfos) }}
				</label>
			</div>
			<div class="medium-6 large-6 cell">
				<label id="detail_lieu"></label>
			</div>
		</div>
	</div>
    <button class="btn button primary">{{ button_label|default('Mettre à jour') }}</button>
    {{ form_end(form) }}
    <a class="btn button warning" href="{{ path('app_sortie_index') }}">Retour</a>

    {{ include('sortie/_delete_form.html.twig') }}
{% endblock %}
