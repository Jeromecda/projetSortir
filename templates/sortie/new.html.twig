{% extends 'layouts/base.html.twig' %}

{% block title %}New Sortie
{% endblock %}

{% block body %}
	<h1>Create new Sortie</h1>

	{{ form_start(form) }}
	{# <form>
						       {{ form_widget(form) }}
						       <button class="btn button success">{{ button_label|default('Save') }}</button>
						   </form>
						   
						   #}


	<div class="grid-container">
		<div class="grid-x grid-padding-x">
			<div class="medium-6 large-6 cell">
				<label>Nom
					{{ form_widget(form.nom) }}
				</label>
			</div>
			<div class="medium-6 large-6 cell">
				<label>Ville organisatrice
					{{ form_widget(form.siteOrganisateur) }}
				</label>
			</div>
		</div>

		<div class="grid-x grid-padding-x">
			<div class="medium-6 large-6 cell">
				<label>date de Debut
					{{ form_widget(form.datedebut) }}
				</label>
			</div>
			<div class="medium-6 large-6 cell">
				<label>Ville
					<div id="select_ville" onchange="returnLieux">
						{{ form_widget(form.ville) }}
					</div>
				</label>
			</div>
		</div>

		<div class="grid-x grid-padding-x">
			<div class="medium-6 large-6 cell">
				<label>date de Cloture
					{{ form_widget(form.datecloture) }}
				</label>
			</div>
			<div class="medium-6 large-6 cell">

				<label class="group-label">Lieu&NonBreakingSpace;
					<div class="input-group">
						{{ form_widget(form.lieuNolieu) }} <a class="btn button success group-button" href="{{ path('app_lieu_new') }}"> + </a>
					</div>
				</label>
			</div>
		</div>

		<div class="grid-x grid-padding-x">
			<div class="medium-6 large-6 cell">
				<label>nombre d'inscription maximum
					{{ form_widget(form.nbinscriptionsmax) }}
				</label>
			</div>
			<div class="medium-6 large-6 cell">
				<label id="detail_lieu">Détails lieu
				</label>
			</div>
		</div>
		<div class="grid-x grid-padding-x">
			<div class="medium-6 large-6 cell">
				<label>durée
					{{ form_widget(form.duree) }}
				</label>
			</div>
			{# <div class="medium-6 large-6 cell">
				<label>url de la photo
					{{ form_widget(form.urlPhoto) }}
				</label>
			</div> #}
			<div class="medium-6 large-6 cell">
				<label>description de la sortie
					{{ form_widget(form.descriptioninfos) }}
				</label>
			</div>

		</div>
	</div>

	<button class="btn button primary">{{ button_label|default('Save') }}</button>
	{{ form_end(form) }}

	{# {{ form_widget(form.nom) }}
						       {{ form_widget(form.datedebut) }}
						       {{ form_widget(form.duree) }}
						       {{ form_widget(form.datecloture) }}
						       {{ form_widget(form.nbinscriptionsmax) }}
						       {{ form_widget(form.descriptioninfos) }}
						       {{ form_widget(form.urlPhoto) }}
						       {{ form_widget(form.etatNoEtat) }}
						       {{ form_widget(form.lieuNolieu) }}
						       {{ form_widget(form.participants) }}
						   
						       {{ form_widget(form.siteOrganisateur) }} #}


	<a class="btn button warning" href="{{ path('app_sortie_index') }}">back to list</a>

{% endblock %}
