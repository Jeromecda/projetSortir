{% extends 'layouts/base.html.twig' %}

{% block title %}Sortie
{% endblock %}

{% block body %}
<div class="grid-x grid-margin-x ">
	<h1>Sortie</h1>
	<div class="cell">
		<table class="table">
			<tbody>
				<tr>
					<th>Id</th>
					<td>{{ sortie.id }}</td>
				</tr>
				<tr>
					<th>Nom</th>
					<td>{{ sortie.nom }}</td>
				</tr>
				<tr>
					<th>Datedebut</th>
					<td>{{ sortie.datedebut ? sortie.datedebut|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>Duree</th>
					<td>{{ sortie.duree }}</td>
				</tr>
				<tr>
					<th>Datecloture</th>
					<td>{{ sortie.datecloture ? sortie.datecloture|date('Y-m-d H:i:s') : '' }}</td>
				</tr>
				<tr>
					<th>Nbinscriptionsmax</th>
					<td>{{ sortie.nbinscriptionsmax }}</td>
				</tr>
				<tr>
					<th>Descriptioninfos</th>
					<td>{{ sortie.descriptioninfos }}</td>
				</tr>
				<tr>
					<th>Etatsortie</th>
					<td>{{ sortie.etatnoetat.libelle }}</td>
				</tr>
				{% if sortie.urlPhoto is defined and sortie.urlPhoto is not null %}
				<tr>
					<th>UrlPhoto</th>
					<td>{{ sortie.urlPhoto }}</td>
				</tr>
				{% endif %}
			</tbody>
		</table>
		<label class="margin">Liste des participants :</label>
		<table class="table ">
			<tbody>
				<tr>
					<th>pseudo</th>
					<th>nom</th>
				</tr>
				{% for participant in participants %}
				<tr>
					<td>
						{{ participant.pseudo }}
					</td>
					<td>
						{{ participant.nom }} {{ participant.prenom}}
					</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
		
	</div>
	<div class="cell">
		<a class="btn button warning" href="{{ path('app_sortie_index') }}">back to list</a>
	
	</div>		
	<div class="cell">
	{% if is_granted("ROLE_ORGA") %}
	<a class="btn button primary" href="{{ path('app_sortie_edit', {'id': sortie.id}) }}">edit</a>
	</div>
	<div class="cell">
		{{ include('sortie/_delete_form.html.twig') }}
	</div>
	{% endif %}
</div>
{% endblock %}
